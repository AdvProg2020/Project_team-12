<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaProject.Controller.SellerProductsManagementController">
   <children>
      <TreeView fx:id="categoriesTree" layoutY="200.0" prefHeight="200.0" prefWidth="200.0" />
      <TableView fx:id="specsTable" layoutX="200.0" layoutY="200.0" prefHeight="320.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="specsColumn" prefWidth="103.0" text="Specs" />
          <TableColumn fx:id="infoColumn" prefWidth="96.0" text="Info" />
        </columns>
      </TableView>
      <ListView fx:id="productsList" prefHeight="200.0" prefWidth="200.0" />
      <TextField fx:id="nameField" layoutX="200.0" prefHeight="40.0" prefWidth="200.0" promptText="name" />
      <TextField fx:id="brandField" layoutX="200.0" layoutY="40.0" prefHeight="40.0" prefWidth="200.0" promptText="brand" />
      <TextField fx:id="priceField" layoutX="200.0" layoutY="80.0" prefHeight="40.0" prefWidth="200.0" promptText="price" />
      <TextField fx:id="remainingField" layoutX="200.0" layoutY="120.0" prefHeight="40.0" prefWidth="200.0" promptText="number of items" />
      <TextArea fx:id="descriptionArea" layoutX="400.0" layoutY="160.0" prefHeight="200.0" prefWidth="200.0" promptText="description" />
      <ImageView fx:id="imageView" fitHeight="200.0" fitWidth="200.0" layoutX="400.0" layoutY="360.0" onMouseClicked="#chooseImage" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="addButton" layoutX="400.0" layoutY="40.0" mnemonicParsing="false" onAction="#requestAddProduct" prefHeight="40.0" prefWidth="200.0" text="Request add" />
      <Button fx:id="editButton" layoutX="400.0" layoutY="80.0" mnemonicParsing="false" onAction="#requestEditProduct" prefHeight="40.0" prefWidth="200.0" text="Request edit" />
      <Button fx:id="deleteButton" layoutX="400.0" layoutY="120.0" mnemonicParsing="false" onAction="#requestDeleteProduct" prefHeight="40.0" prefWidth="200.0" text="Request delete" />
      <Label fx:id="statusLabel" alignment="CENTER" layoutX="400.0" prefHeight="40.0" prefWidth="200.0" text="Status" />
      <TextField fx:id="infoField" layoutX="200.0" layoutY="520.0" prefHeight="40.0" prefWidth="200.0" promptText="info" />
      <Button layoutX="200.0" layoutY="560.0" mnemonicParsing="false" onAction="#changeInfo" prefHeight="40.0" prefWidth="200.0" text="Change info" />
      <Button layoutX="400.0" layoutY="560.0" mnemonicParsing="false" onAction="#resetImageToDefault" prefHeight="40.0" prefWidth="200.0" text="Reset to default" />
      <TextField fx:id="categoryField" editable="false" layoutX="200.0" layoutY="160.0" prefHeight="40.0" prefWidth="200.0" promptText="category" />
      <ListView fx:id="buyersList" layoutY="400.0" prefHeight="200.0" prefWidth="200.0" />
   </children>
</AnchorPane>
