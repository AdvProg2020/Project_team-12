<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="anchorPane" prefHeight="280.0" prefWidth="160.0" style="-fx-border-color: a9a9a9;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaProject.Controller.ProductInCartController">
    <children>
        <ImageView fx:id="productImage" fitHeight="120.0" fitWidth="120.0" layoutX="20.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../Images/product.png" />
            </image>
        </ImageView>
        <Label fx:id="productName" alignment="CENTER" layoutY="140.0" prefHeight="20.0" prefWidth="160.0" text="Product name">
            <font>
                <Font size="12.0" />
            </font></Label>
        <ImageView fx:id="auctionImage" fitHeight="40.0" fitWidth="40.0" layoutX="20.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../Images/sale.png" />
            </image>
        </ImageView>
        <Label fx:id="price" layoutX="20.0" layoutY="160.0" prefHeight="20.0" prefWidth="140.0" text="Price">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="percent" alignment="CENTER" layoutX="20.0" layoutY="180.0" prefHeight="20.0" prefWidth="30.0" style="-fx-background-color: de4c3c; -fx-background-radius: 10px;" text="100%" textFill="WHITE">
            <font>
                <Font name="System Bold" size="9.0" />
            </font>
        </Label>
        <Label fx:id="previousPrice" layoutX="55.0" layoutY="180.0" prefHeight="20.0" prefWidth="105.0" text="Previous price">
            <font>
                <Font size="9.0" />
            </font>
        </Label>
      <Label fx:id="numberOfProducts" alignment="CENTER" layoutX="36.0" layoutY="203.0" prefHeight="30.0" prefWidth="25.0" text="0">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <ImageView fx:id="decreaseButton" fitHeight="16.0" fitWidth="16.0" layoutX="20.0" layoutY="210.0" onDragDetected="#decreaseProduct" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/minus.png" />
         </image></ImageView>
      <ImageView fx:id="increaseButton" fitHeight="16.0" fitWidth="16.0" layoutX="61.0" layoutY="210.0" onDragDetected="#increaseProduct" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/add.png" />
         </image>
      </ImageView>
      <Label fx:id="totalPrice" layoutX="20.0" layoutY="235.0" prefHeight="30.0" prefWidth="120.0" text="Total:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
